<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/clrPrvBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clrPreviousBtnAction"
        android:text="Clear Previous"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/wsTex1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="              "
        android:layout_toRightOf="@+id/clrPrvBtn"/>

    <ImageButton
        android:id="@+id/sendEmailBtn"
        android:src="@drawable/ic_email_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendEmailBtnAction"
        android:layout_toRightOf="@+id/wsTex1"/>

    <TextView
        android:id="@+id/historyTextLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Previous Results"
        android:textColor="#0000ff"
        android:layout_below="@+id/clrPrvBtn"/>

    <ListView
        android:id="@+id/historyListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/historyTextLabel"/>

</RelativeLayout>